<!--pages/tab_JobList.wxml-->
<view class='page'>

  <!-- list title -->
  <view class='page__hd'>
    <form class='weui-cells-form'>
      <view class='yl-row searchList'>
        <view class='yl-fgrow2'>
          <input type='text' class='weui-input' placeholder='请输入想要搜索的内容' placeholder-class='phcolor' confirm-type='search' bindinput="searchValue" />
        </view>
        <view class='btnList'>
          <icon class='iconfont icon-jiahao' bindtap='jobIntention'></icon>
          <icon type='search' class='searchIcon' color='white' bindtap='searchJob'></icon>
        </view>
      </view>
      <view class='orderList yl-row'>
        <view class='yl-fgrow1' bindtap='orderByTJ'>
          <text>推荐\t</text>
          <image class='orderIcon' src='{{orderByTJicon}}' mode='scaleToFill'></image>
        </view>
        <view class='yl-fgrow1' bindtap='orderByDZ'>
          <text>{{orderByDZtext}}\t</text>
          <image class='orderIcon' src='{{orderByDZicon}}' mode='scaleToFill'></image>
        </view>
        <view class='yl-fgrow1' bindtap='orderByGS'>
          <text>公司\t</text>
          <image class='orderIcon' src='{{orderByGSicon}}' mode='scaleToFill'></image>
        </view>
        <view class='yl-fgrow1' bindtap='orderByYQ'>
          <text>要求\t</text>
          <image class='orderIcon' src='{{orderByYQicon}}' mode='scaleToFill'></image>
        </view>
      </view>
    </form>
  </view>

  <!--list body -->
  <view class='page__bd'>
    <block wx:for='{{jobListItem}}' wx:key='jobListKey' wx:for-item='item'>
      <view class='listItem'>

        <view class='lg-black'>
          <text class='fl1 fontSix'>{{item.jobName}}</text>
          <text class='fl2'>{{item.jobPayMin}}~{{item.jobPayMax}}</text>
        </view>

        <view class='md-black'>
          <text class='fl1'>{{item.companyName}}</text>
        </view>

        <view class='sm-gray'>
          <text class='fl1'>{{item.companyAddress}}</text>
          <text>{{item.workExperience}}</text>
          <text>{{item.degree}}</text>
        </view>

        <view class='md-black'>
          <!-- <image src=''></image> -->
          <text class='fl1'>{{item.publisherName}}</text>
          <text>\t·\t</text>
          <text>{{item.publisherPost}}</text>
        </view>


      </view>
    </block>
    <view class='bottomLine'>
      <text class='md-black'>--------\t最底部啦\t--------</text>
    </view>
  </view>
</view>