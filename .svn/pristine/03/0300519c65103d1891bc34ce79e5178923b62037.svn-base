<!--pages/tab_Myinfo.wxml-->
<view class='page'>

  <view wx:if="{{isRegister}}">
    <view class='page__hd'>
      <view class='topIcon'>
        <icon class='iconfont icon-saoma'></icon>
        <icon class='iconfont icon-shezhi inright'></icon>
      </view>

      <view class='yl-row'>

        <view class='yl-col-6 inleft fontSix'>
          <view>
            <text>用户姓名</text>
          </view>
          <view class='navLink'>
            <navigator>我的个人主页\t\t ></navigator>
          </view>
        </view>

        <view class='yl-col-6 '>
          <view class='profile'>
            <image src='../../../images/hP.jpg' mode='scaleToFill'></image>
          </view>
        </view>
      </view>


    </view>

    <view class='page__bd'>

      <view class='yl-row statistics'>
        <view class='yl-col-4'>
          <view>
            <text class='fontSix'>1</text>
          </view>
          <text>沟通过</text>
        </view>
        <view class='yl-col-4'>
          <view>
            <text class='fontSix'>1</text>
          </view>
          <text>面试</text>
        </view>
        <view class='yl-col-4'>
          <view>
            <text class='fontSix'>1</text>
          </view>
          <text>投递</text>
        </view>
        <view class='yl-col-4'>
          <view>
            <text class='fontSix'>1</text>
          </view>
          <text>感兴趣</text>
        </view>
      </view>

      <view class='middleArea'>
        <view class='optionList'>
          <view class='optionItem'>
            <icon class='iconfont icon-wenjian1 leftIcon'></icon>
            <text>我的简历</text>
            <icon class='iconfont icon-r_j inright'></icon>
          </view>

          <view class='optionItem'>
            <icon class='iconfont icon-wenjian2 leftIcon'></icon>
            <text>附件简历</text>
            <icon class='iconfont icon-r_j inright'></icon>
          </view>

          <view class='optionItem'>
            <icon class='iconfont icon-lingdai leftIcon'></icon>
            <text>管理求职意向</text>
            <icon class='iconfont icon-r_j inright'></icon>
          </view>

          <view class='optionItem'>
            <icon class='iconfont icon-zhexiantu2 leftIcon'></icon>
            <text>提示简历排名</text>
            <icon class='iconfont icon-r_j inright'></icon>
          </view>

          <view class='optionItem'>
            <icon class='iconfont icon-guanzhu leftIcon'></icon>
            <text>关注公司</text>
            <icon class='iconfont icon-r_j inright'></icon>
          </view>

          <view class='optionItem'>
            <icon class='iconfont icon-weixin leftIcon'></icon>
            <text>关注微信</text>
            <icon class='iconfont icon-r_j inright'></icon>
          </view>
        </view>
      </view>
    </view>

  </view>
  <view wx:else>
    <view class='page__hd'>
      <view class='topIcon'>
        <icon class='iconfont icon-saoma'></icon>
        <icon class='iconfont icon-shezhi inright'></icon>
      </view>

      <view class='yl-row'>

        <view class='yl-col-6 inleft fontSix'>
          <view>
            <text>注册\t / \t登录</text>
          </view>
        </view>

        <view class='yl-col-6 '>
          <view class='profile'>
            <!-- <image src='../../../images/hP.jpg' mode='scaleToFill'></image> -->
          </view>
        </view>
      </view>
    </view>
  </view>
  
  <view class='systemOption'>
    <view class='optionList'>
      <view class='optionItem'>
        <icon class='iconfont icon-wenjian1 leftIcon'></icon>
        <text>隐私设置</text>
        <icon class='iconfont icon-r_j inright'></icon>
      </view>

      <view class='optionItem'>
        <icon class='iconfont icon-shezhi leftIcon'></icon>
        <text>帮助与反馈</text>
        <icon class='iconfont icon-r_j inright'></icon>
      </view>
    </view>
  </view>

  <view class='reminder'>
    <text>存放一些提示行文字</text>
    <text>或者一些友情链接</text>
  </view>

</view>