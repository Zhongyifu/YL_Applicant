<!--pages/register/secondPage/myInfo.wxml-->
<view class='page'>

  <view class='topArea'>
    <text>填写基本信息</text>
  </view>

  <view class='inputArea page__bd'>
    <form bindsubmit='myInfoForm'>
      <view class='weui-cells weui-cells_form'>

        <view class='uploadHP'>
          <view class='hpArea'>

          </view>

          <view class='chooseSex'>
            <radio-group class="radio-group" bindchange="sexChanage">
              <label class="radio">
                <radio value='M' checked='true'>男</radio>
                <radio value='F'>女</radio>
              </label>
            </radio-group>
          </view>
        </view>

        <view class='weui-cell'>
          <view class='weui-cell__hd'>
            <text class='weui-label'>姓名：</text>
          </view>

          <view class='weui-cell__bd'>
            <input class='weui-input' name='name' bindinput='nameInput' confirm-type='next' placeholder='请填写姓名' placeholder-class='inputPla'></input>
          </view>
        </view>


        <view class='weui-cell'>
          <view class='weui-cell__hd'>
            <text class='weui-label'>邮箱：</text>
          </view>

          <view class='weui-cell__bd'>
            <input class='weui-input' name='email' bindinput='emailInput' confirm-type='next' placeholder='请填写邮箱' placeholder-class='inputPla'></input>
          </view>
        </view>


        <view class='weui-cell'>
          <view class='weui-cell__hd'>
            <text class='weui-label'>身份证号码：</text>
          </view>

          <view class='weui-cell__bd'>
            <input class='weui-input' type='idcard' name='idcard' bindinput='idcardInput' confirm-type='next' placeholder='请填写身份证号码' placeholder-class='inputPla'></input>
          </view>
        </view>

        <view class='weui-cell'>
          <view class='weui-cell__hd'>
            <text class='weui-label'>目前月收入：</text>
          </view>

          <view class='weui-cell__bd'>
            <picker mode='multiSelector' bindchange='salayChange' bindcolumnchange='salaryColChage' value='{{salaryItem}}' range='{{salaryList}}'>
              <block wx:if='{{isSalaryChange}}'>
                <text class='black'>{{salaryList[0][salaryItem[0]]}}\t ~ \t{{salaryList[1][salaryItem[1]]}}</text>
              </block>
              <block wx:else>
                <text class='gray'>请选择当前月薪</text>
              </block>
            </picker>
          </view>
        </view>

        <view class='weui-cell'>
          <view class='weui-cell__hd'>
            <text class='weui-label'>婚姻情况：</text>
          </view>

          <view class='weui-cell__bd'>
            <picker mode='selector' bindchange='maritalChange' value='{{maritalItem}}' range='{{maritalList}}'>
              <block wx:if='{{!isMaritalChange}}'>
                <text class='gray'>请选择婚姻情况</text>
              </block>
              <block wx:else>
                <text class='black'>{{maritalList[maritalItem]}}</text>
              </block>
            </picker>
          </view>
        </view>

        <view class='weui-cell'>
          <view class='weui-cell__hd'>
            <text class='weui-label'>出生年月：</text>
          </view>

          <view class='weui-cell__bd'>
            <picker mode='date' bindchange='birthdayChange' start='{{startDay}}' end='{{endDay}}' fields='day' value='{{birthdayDate}}'>
              <block wx:if='{{isBirthdayChange}}'>
                <text class='black'>{{birthdayDate}}</text>
              </block>
              <block wx:else>
                <text class='gray'>请输入出生年月</text>
              </block>
            </picker>
          </view>
        </view>

        <view class='weui-cell'>
          <view class='weui-cell__hd'>
            <text class='weui-label'>参加工作时间：</text>
          </view>

          <view class='weui-cell__bd'>
            <picker mode='date' bindchange='jobExpChange' start='{{startDay}}' end='{{endDay}}' fields='month' value='{{jobDate}}'>
              <block wx:if='{{isJobChange}}'>
                <text class='black'>{{jobDate}}</text>
              </block>
              <block wx:else>
                <text class='gray'>请选择参加工作的时间</text>
              </block>
            </picker>
          </view>
        </view>


      </view>
      <!-- weui-cells END -->
      <view class='weui-btn-area'>
        <button type='primary' form-type='submit'>下一步</button>
      </view>

    </form>
  </view>

</view>