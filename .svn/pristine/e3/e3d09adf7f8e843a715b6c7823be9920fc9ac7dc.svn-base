/* pages/tabBarPage/tab_Resume/tab_Resume.wxss */

/* common end */

.page__hd .center-view {
  text-align: center;
}

.page__hd .yl-row .yl-fgrow1 {
  margin: 10rpx;
}

.page__hd .yl-row .yl-fgrow1:first-child {
  border-right: 1px solid #ccc;
}

.page__hd .yl-row .yl-fgrow1 .iconfont {
  color: #ccc;
  font-size: 1.3rem;
  margin-right: 10rpx;
}

.page__hd .yl-row .yl-fgrow1 .icon-wenjian {
  font-size: 1.1rem;
  padding-bottom: 10rpx;
}

/* top end */

/* headPortrait 头像 */

.page__bd .section {
  margin-bottom: 20rpx;
}

.myInfo .yl-row {
  padding-top: 20rpx;
  padding-bottom: 20rpx;
}

.myInfo .yl-fgrow2 .lg-black {
  margin-bottom: 20rpx;
}

.myInfo .hP image {
  width: 130rpx;
  height: 130rpx;
  border-radius: 75rpx;
}

.myJob {
  margin-top: 10rpx;
}

.myJob .myJobTitle {
  margin: 10rpx 0rpx;
}

.myJob .myJobTitle text {
  font-weight: 700;
}

.myJob .iconfont {
  font-size: 45rpx;
  color: #ccc;
  margin-right: 10rpx;
}

.myJob .myJobItem text {
  margin-right: 30rpx;
}

.myJob .myJobItem view {
  margin-top: 10rpx;
  margin-bottom: 20rpx;
}

.myJobExpect .md-black {
  font-weight: 600;
}

.myJobExpect .yl-row {
  margin: 10rpx 0rpx;
}

.myJobExpect .expMoneny {
  color: #199ed8;
}

.myJobExpect .jobExpect {
  padding: 10rpx 0rpx;
}

.myJobExp .workTag {
  margin-top: 10rpx;
}

.myJobExp .workDetails {
  margin-bottom: 20rpx;
}

.myJobExp .tagItem {
  margin-bottom: 25rpx;
}

.myJobExp .tagItem text {
  border: 1px solid #ccc;
  padding: 5rpx;
  font-size: 28rpx;
  margin-right: 20rpx;
}

.myJobExp .yl-row {
  padding-top: 20rpx;
  margin-bottom: 10rpx;
}

.myEduExp .sName {
  margin: 20rpx 0;
}

.myEduExp .md-gray {
  margin-bottom: 20rpx;
}
