/* pages/tab_Myinfo.wxss */

.page__hd {
  background-color: #199ed8;
  color: white;
}

.inleft .navLink {
  margin-top: 20rpx;
}

.inright {
  float: right;
  margin-right: 30rpx;
}

.page__hd .topIcon {
  padding-left: 30rpx;
}

.topIcon .iconfont {
  font-size: 1.3rem;
}

.page__hd .yl-row {
  padding-left: 30rpx;
}

.page__hd navigator {
  font-size: 30rpx;
}

.page__hd .profile {
  width: 180rpx;
  height: 180rpx;
  border-radius: 90rpx;
  margin: 0 auto;
  margin-bottom: 20rpx;
}

.profile image {
  width: 18rpx;
  height: 180rpx;
  border-radius: 90rpx;
}

/* hd end */

.page__bd .yl-col-4 {
  text-align: center;
}

.statistics {
  padding: 25rpx 0rpx;
}

.statistics .fontSix {
  color: black;
}

.statistics text {
  font-size: 35rpx;
  color: #999;
}
.middleArea{
  border-top: 8rpx solid #ccc;
  border-bottom: 8rpx solid #ccc;
}
.optionList {
  width: 90%;
  margin: 0 auto;
}

.optionList .optionItem {
  padding: 5rpx 0rpx;
  border-bottom: 1px solid #ccc;
}
.optionList .optionItem:last-child{
  border-bottom: 0rpx;
}

.optionList .optionItem .leftIcon {
  color: #199ed8;
  font-size: 40rpx;
  margin-right: 30rpx;
}

.optionList .optionItem text {
  font-size: 30rpx;
}
.reminder{
  background-color: #ccc;
  text-align: center;
  padding: 30rpx;
}
.reminder text{
  font-size: 30rpx;
}