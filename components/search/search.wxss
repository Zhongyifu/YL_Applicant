.mask {
  position: fixed;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  top: 122px;
  left: 0;
  z-index: 10;
  transition: all 300ms ease-out;
}

/*弹出模态框*/

.mymodal {
  width: 100%;
  position: fixed;
  z-index: 20;
  background: white;
  height: 460px;
  transition: all 300ms ease-out;
  top: 122px;
  border-radius: 0rpx
}

.mymodal .mymodal-title {
  font-size: 30rpx;
  height: 0px;
  line-height: 50px;
  border-bottom: 1px solid #ddd;
  color: #666;
  padding: 0 20px;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.mymodal .mymodal-content {
  padding: 15px;
  /* height: 320px; */
  overflow: scroll;
}
