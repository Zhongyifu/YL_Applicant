/* pages/tab_Company/tab_Company.wxss */

.mymodal {
  top: 122px;
  border-radius: 0rpx;
}

.btnList icon {
  margin-right: 1rem;
}

.orderList {
  height: 3rem;
  text-align: center;
  line-height: 1.5rem;
  border-bottom: 1px solid #ccc;
}

.orderList text {
  font-size: 1rem;
}

.orderIcon {
  width: 1rem;
  height: 1rem;
}

/* top end */

.inright {
  position: absolute;
  top: -0rpx;
  right: 0;
}

.blink {
  font-weight: 600;
  margin-bottom: 0.5rem;
}

.itemFirst {
  position: relative;
  margin-bottom: 10px;
}

.itemFirst .cover {
  text-align: center;
  height: 80px;
  width: 20%;
}

.itemFirst .itemFl {
  display: flex;
}

.cover image {
  width: 100%;
  height: 100%;
  border-radius: 5px;
}

.listItem .message view:last-child {
  font-size: 12px;
  color: #000;
  margin-top: 9px;
}

.listItem .blink {
  color: #000;
  font-size: 16px;
}

.listItem .comInfo {
  font-size: 12px;
  color: #999;
  margin-top: 0.3rem;
  margin-bottom: 0.3rem;
}

.listItem .comInfo text {
  margin: 0rem;
  margin-right: 10px;
}

.listItem .jobLink {
  color: #199ed8;
  margin: 0px 5px;
}

.listItem .rightText {
  text-align: right;
  margin: 0;
  margin-right: 1rem;
  font-size: 1.1rem;
}

.message {
  width: 70%;
  padding-left: 10px;
}

.unfollow {
  position: absolute;
  top: 0px;
  right: 5px;
  background-color: #fff;
}

.unfollow image {
  width: 25px;
  height: 25px;
}

/* 弹窗 */

.search_item .itemContent .select-item {
  padding: 3px 5px;
}
