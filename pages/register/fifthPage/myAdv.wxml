<!--pages/register/fifthPage/myAdv.wxml-->
<view class='page'>

  <view class='topArea'>
    <text>我的优势</text>
  </view>

  <view class='inputArea page__bd'>
    <form bindsubmit='registerForm'>
      <view class='weui-cells weui-cells_form'>

        <view class='weui-cell'>
          <textarea placeholder="一段话突出自己核心优势，提高自己的竞争力！" placeholder-style='color:#999' name='myAdv' />
        </view>

      </view>
      <view class='weui-btn-area'>
        <button type='primary' form-type='submit'>提交</button>
        <button type='default' bindtap='skipTap'>跳过</button>
      </view>
    </form>
  </view>
</view>