/* pages/tab_Company/tab_Company.wxss */

.btnList icon {
  margin-right: 1rem;
}

.orderList {
  height: 2rem;
  line-height: 2rem;
  text-align: center;
  border-bottom: 1px solid #ccc;
}

.orderList text {
  font-size: 1rem;
}

.orderIcon {
  width: 1rem;
  height: 1rem;
}

/* top end */
.inright {
  position: absolute;
  top: -20rpx;
  right: 0;
}
.blink {
  font-weight: 600;
  margin-bottom: 0.5rem;
}

.page__bd .listItem {
  border-bottom: 5px solid #f2f2f2;
  font-size: 1rem;
  padding: 1rem 1rem 0.3rem 1rem;
}

.itemFirst .cover {
  text-align: center;
  margin-right: 0.5rem;
  height: 200rpx;
  width: 80rpx;
}
.cover image{
  width: 100%;
  height: 100%;
}

.listItem .comInfo {
  margin-top: 0.3rem;
}

.listItem .comInfo text {
  margin: 0rem 0.7rem;
}
.listItem .jobLink{
  color: #199ed8;
}
.listItem .rightText{
  text-align: right;
  margin: 0;
  margin-right: 1rem;
  font-size: 1.1rem;
}
