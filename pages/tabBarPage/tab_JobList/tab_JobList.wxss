}

.btnList .icon-jiahao {
  color: white;
  font-size: 1.3rem;
}

.orderList {
  height: 2rem;
  text-align: center;
  line-height: 1.5rem;
  border-bottom: 1px solid #ccc;
}

.orderList text {
  font-size: 1rem;
}

