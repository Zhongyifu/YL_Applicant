@import "weui.wxss";

/* common */

page {
  background-color: #f6f8f8;
}

.weui-cells {
  background-color: #f6f8f8;
}

.show {
  display: block;
}

.hidden {
  display: none;
}

switch {
  zoom: 0.6;
}

/* pg_hd 相关 */

.page__hd {
  margin: 0rem;
  padding: 0rem;
}

.page__hd input {
  width: 85%;
  padding-left: 20px;
  margin: 15px 0 15px 20px;
  border-radius: 5px;
  color: black;
  border: 1px solid #ccc;
  background-color: white;
}

.position {
  position: relative;
}

/* 关于标签 */

.skillItem {
  display: block;
  float: left;
  border: 1px solid #199ed8;
  font-size: 14px;
  padding: 2px 5px;
  margin-bottom: 5px;
  margin-right: 5px;
}

.itemInfo text {
  background-color: #ebecef;
  padding: 3px 5px;
  border-radius: 3px;
}

/* 关于弹出框的部分样式 */

.search-modal .search-item {
  padding: 5px 15px;
}

.search-modal .checked {
  border: 1px solid #199ed8;
}

.search-modal .checked::after {
  content: '✓';
  color: #199ed8;
  margin-left: 10px;
}

.search-modal .yl-fgrow1 {
  border-right: 1px solid #ccc;
  text-align: center;
  overflow: scroll;
  height: 100%;
  max-height: 395px;
}

.search-modal .yl-fgrow1 text {
  display: block;
  width: 70%;
  margin-bottom: 10px;
  margin-left: 10px;
  border: 1px solid #ccc;
  padding: 5px 0px;
}

.search-modal .yl-fgrow1:last-child {
  border-right: 0;
}

.search-modal .formBtn {
  position: absolute;
  bottom: 0px;
  left: 0px;
  width: 100%;
  border-top: 1px solid #ccc;
}

.search-modal .formBtn button {
  width: 100%;
}

/* 搜索框：placeholder */

.weui-btn-area button {
  margin-bottom: 65rpx;
}

.phcolor {
  text-align: center;
  color: #ccc;
}

/* 顶部搜索部分 */

.searchTop {
  position: relative;
}

.searchTop .page__hd {
  position: fixed;
  top: 0;
  width: 100%;
  z-index: 2;
  background: white;
}

.searchTop .page__bd {
  /* margin-top: 140px; */
  margin-top: 121px;
  height: 100%;
  width: 100%;
  overflow: scroll;
  background-color: #f2f3f5;
}

.searchTop .page__bd .listItem {
  margin-bottom: 5px;
  font-size: 1rem;
  padding: 1rem 1rem 0.3rem 1rem;
  background-color: white;
}

.searchTop .btnList .searchIcon {
  background: #199ed8;
  padding: 10px 15px;
  margin-right: 10px;
  border-radius: 5px;
}

.searchList {
  background-color: #fff;
}

/* 自编的栅格系统 */

.yl-row {
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  width: 100%;
  /* height: 50%; */
}
.yl-col-6{
  width: 75%;
}
.yl-col-4{
  width: 25%;
}

.yl-fgrow2 {
  flex-grow: 2;
}

.yl-fgrow1 {
  flex-grow: 1;
}

/* 关于字体的定义 */

.fontSix {
  font-weight: 600;
}

.gray {
  color: #999;
}

.gray-d {
  color: #333;
}

.black {
  color: #000;
}

.blue {
  color: #199ed8;
}

.text-sm {
  font-size: 12px;
}

.text-md {
  font-size: 14px;
}

.text-lg {
  font-size: 16px;
}

.section_Title {
  color: #333;
  font-size: 20px;
  font-weight: 600;
}

/* 仿写<hr/> */

.line {
  margin: 0 auto;
  margin-top: 0.3rem;
  margin-bottom: 0.3rem;
  height: 2rpx;
  background-color: #d8d8d8;
}

/* “到底了” line*/

.bottomLine {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  text-align: center;
  font-size: 1rem;
}

/* 带灰色下边线的view */

.center-view {
  width: 90%;
  margin: 0 auto;
  border-bottom: 1px solid #ccc;
}

/* 登录注册流程页面 */

.topArea {
  height: 100rpx;
  width: 100%;
  text-align: center;
  line-height: 100rpx;
  border-bottom: 1px solid #ccc;
  margin-bottom: 20px;
  font-weight: 600;
}

.inputArea .weui-cells {
  width: 90%;
  margin: 0 auto;
  margin-left: 20px;
}

.inputArea .weui-cell {
  border-bottom: 1px solid #ccc;
}

.inputArea .weui-cell {
  padding: 10rpx 0;
}

.inputArea .weui-cells:before {
  border: 0;
}

.inputArea .weui-cells:after {
  border: 0;
}

.inputArea .weui-cell:before {
  border: 0;
}

.inputArea .weui-cell__ft button {
  font-size: 25rpx;
}

/* 选择器 */

.inputArea .weui-cell__bd picker {
  padding: 15rpx 0;
}

.inputArea .weui-cell__bd input {
  min-height: 1rem;
}

/* 把注册流程的按钮定位到底部 */

.inputArea .weui-btn-area {
  position: fixed;
  bottom: 0px;
  left: 5px;
  width: 90%;
}

/* 关于自定义弹窗 */

.select-modal .mymodal {
  width: 90%;
  left: 20px;
  bottom: 0;
  top: 120px;
  z-index: 999;
  border-radius: 0rpx;
}

.select-modal .modalName {
  width: 100%;
  text-align: center;
}

.select-item {
  display: block;
  float: left;
  border: 1px solid #199ed8;
  font-size: 14px;
  padding: 7px 5px;
  margin-left: 10px;
  margin-bottom: 10px;
}

.select-modal .itemView {
  height: 311px;
  overflow: scroll;
}

.select-modal .comfirmDate {
  text-align: center;
  height: 50px;
  display: fixed;
  position: absolute;
  bottom: 0px;
  width: 90%;
  background: white;
  border-top: 1px solid #ccc;
}

.select-modal .comfirmDate view {
  width: 50%;
}

.select-modal .cancel {
  float: left;
  border-right: 1px solid #ccc;
}

.select-modal .comfirm {
  color: #5ac459;
}

/* 被选中 */

.selected {
  background-color: #199ed8;
  color: white;
}

/* 防止页面在有弹出层时滚动 */

.stopScroll {
  position: fixed;
}

