@import "weui.wxss";

/**app.wxss**/

.show {
  display: block;
}

.hidden {
  display: none;
}

/* 关于弹出框的部分样式 */

.search-modal .search-item {
  padding: 0 15px;
}

.search-modal .checked {
  border: 1px solid #199ed8;
}

.search-modal .checked::after {
  content: '√';
  color: #199ed8;
  margin-left: 10px;
}

.search-modal .yl-fgrow1 {
  border-right: 1px solid #ccc;
  text-align: center;
  overflow: scroll;
  height: 100%;
  max-height: 408px;
}

.search-modal .yl-fgrow1 text {
  display: block;
  width: 80%;
  margin-bottom: 10px;
  margin-left: 10px;
  border: 1px solid #ccc;
  background-color: #eff3f6;
}

.search-modal .yl-fgrow1:last-child {
  border-right: 0;
}

.search-modal .formBtn {
  position: absolute;
  bottom: 0px;
  left: 0px;
  width: 100%;
  border-top: 1px solid #ccc;
}

.search-modal .formBtn button {
  width: 100%;
}

/* ---------------------------- */

.position {
  position: relative;
}

/* 搜索框：placeholder */

.weui-btn-area button {
  margin-bottom: 15rpx;
}

.phcolor {
  color: white;
}

/* 顶部搜索部分 */

.page__hd {
  margin: 0rem;
  padding: 0rem;
}

.page__hd input {
  width: 100%;
  padding-left: 0.5rem;
  color: white;
}

.searchList {
  background-color: #199ed8;
}

/* 自编的栅格系统 */

.yl-row {
  display: flex;
  flex-wrap: nowrap;
  align-items: center;
  width: 100%;
  height: 50%;
}

.yl-col-8 {
  width: 75%;
}

.yl-col-9 {
  width: 70%;
}

.yl-col-6 {
  width: 50%;
}

.yl-col-4 {
  width: 25%;
}

.yl-col-3 {
  width: 30%;
}

.yl-fgrow2 {
  flex-grow: 2;
}

.yl-fgrow1 {
  flex-grow: 1;
}

/* 部分背景颜色 */

.bg-gray text {
  background-color: #eff3f6;
  font-size: 0.6rem;
  color: #919191;
  margin-right: 20rpx;
  padding: 5rpx 10rpx;
  border-radius: 10rpx;
}

/* 关于字体的定义 */

.fontSix {
  font-weight: 700;
}

.gray {
  color: #999;
}

.black {
  color: #000;
}

.sm-gray {
  font-size: 0.7rem;
  color: #999;
}

.md-gray {
  font-size: 0.8rem;
  color: #999;
}

.lg-gray {
  font-size: 1rem;
  color: #999;
}

.lg-black {
  font-size: 30rpx;
  color: black;
}

.md-black {
  font-size: 28rpx;
  color: black;
}

.sm-black {
  font-size: 25rpx;
  color: black;
}

/* 仿写<hr/> */

.line {
  margin: 0 auto;
  margin-top: 0.3rem;
  margin-bottom: 0.3rem;
  height: 2rpx;
  background-color: #d8d8d8;
}

/* “到底了” line*/

.bottomLine {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  text-align: center;
  font-size: 1rem;
}

/* 带灰色下边线的view */

.center-view {
  width: 90%;
  margin: 0 auto;
  border-bottom: 1px solid #ccc;
}

/* 登录注册流程页面 */

.topArea {
  height: 100rpx;
  width: 100%;
  text-align: center;
  line-height: 100rpx;
}

.inputArea .weui-cells {
  width: 90%;
  margin: 0 auto;
  margin-left: 20px;
}

.inputArea .weui-cell {
  border-bottom: 1px solid #ccc;
}

.inputArea .weui-cell {
  padding: 10rpx 0;
}

.inputArea .weui-cells:before {
  border: 0;
}

.inputArea .weui-cells:after {
  border: 0;
}

.inputArea .weui-cell:before {
  border: 0;
}

.inputArea .weui-cell__ft button {
  font-size: 25rpx;
}

/* 选择器 */

.inputArea .weui-cell__bd picker {
  padding: 15rpx 0;
}

.inputArea .weui-cell__bd input {
  min-height: 1rem;
}

/* 把注册流程的按钮定位到底部 */

.inputArea .weui-btn-area {
  position: fixed;
  bottom: 0px;
  left: 5px;
  width: 90%;
}

/* 关于自定义弹窗 */

.select-modal .mymodal {
  width: 90%;
  left: 20px;
  bottom: 0;
  top: 80px;
}

.select-modal .modalName {
  width: 100%;
  text-align: center;
}

.select-modal .select-item {
  display: block;
  float: left;
  border: 1px solid #199ed8;
  font-size: 14px;
  padding: 2px 5px;
  border-radius: 10%;
  margin-left: 10px;
  margin-bottom: 10px;
}

.select-modal .itemView {
  height: 311px;
  overflow: scroll;
}

.select-modal .comfirmDate {
  text-align: center;
}

.select-modal .cancel {
  float: left;
  border-right: 1px solid #ccc;
}

.select-modal .comfirm {
  color: #5ac459;
}

/* 被选中 */

.selected {
  background-color: #199ed8;
  color: white;
}

